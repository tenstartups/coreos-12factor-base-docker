[Unit]
Description=CoreOS install bash completion service

[Service]
Type=oneshot
User=core
WorkingDirectory=/home/core
EnvironmentFile=/12factor/env/systemd.env
Environment=SERVICE_NAME=install-bash-completion
ExecStartPre=-/12factor/bin/send-notification info "Started `${SERVICE_NAME}` service"
ExecStart=/12factor/bin/coreos-install-bash-completion
ExecStartPost=-/12factor/bin/send-notification success "Finished `${SERVICE_NAME}` service"
