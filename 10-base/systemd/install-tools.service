[Unit]
Description=CoreOS tools installation service

[Service]
Type=oneshot
User=core
WorkingDirectory=/home/core
EnvironmentFile=/12factor/env/systemd.env
Environment=SERVICE_NAME=tools-install
ExecStartPre=-/12factor/bin/send-notification warn "Starting `${SERVICE_NAME}` service"
ExecStart=/12factor/bin/coreos-install-tools
ExecStartPost=-/12factor/bin/send-notification success "Finished `${SERVICE_NAME}` service"
